{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src", // allows for relative imports
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "~/*": ["./*"]
    },
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": ["vite/client", "node", "chrome", "cypress", "cypress-axe", "@testing-library/cypress"]
  }
}
